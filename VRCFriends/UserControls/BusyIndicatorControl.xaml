<UserControl x:Class="VRCFriends.UserControls.BusyIndicatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VRCFriends.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Background="Black" Opacity="0.5" Grid.Row="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    x:Name="txtMessageText"
                    d:Text="This is a message"
                    Padding="10"
                    Foreground="White"
                    TextAlignment="Center" />
                <ProgressBar IsIndeterminate="True" Height="10" Padding="10" MaxWidth="200" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
